{
  "env": {
      "es6": true,
      "node": true,
      "jest": true
  },
  "extends": [
      "airbnb-base",
      "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint",
      "prettier"
  ],
  "rules": {
    "no-unused-vars": "off",
    "camelcase": "off",
    "no-empty-function": "off",
    "import/prefer-default-export": "off",
    "no-useless-constructor": "off",
    "prettier/prettier": "error",
    "import/no-unresolved": "off",
    "class-methods-use-this":"off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never"
      }
    ]
  },
  "settings": {
    "import/resolver":{
      "node": {
        "extensions": [".ts", ".tsx"]
      }
    }
  },
  "overrides": [
    {
      "files": ["**/__tests__/**/*.spec.ts?(x)"],
      "env": {
        "jest": true
      }
    }
  ]
}
